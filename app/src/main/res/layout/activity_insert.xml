<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.correios.edwinos.consultacorreios.InsertActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome Amigavel"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/frendlyName"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frendlyName"
        android:hint="Ex.: Encomenda de Paçoca"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Código do Objeto"
        android:id="@+id/textView2"

        android:layout_below="@+id/frendlyName"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/frendlyName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeObj"
        android:hint="AAXXXXXXXXXBR"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeObj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:weightSum="1">

        <Button
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:id="@+id/okBtn"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:onClick="onOkBtnClicked"
        />
        <Button
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:id="@+id/okCancel"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:onClick="onCancelBtnClicked"
        />
    </LinearLayout>

</RelativeLayout>
