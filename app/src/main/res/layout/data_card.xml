<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
    >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/statusThumb"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="15/10/2014 às 16:51:00"
            android:id="@+id/dateTime"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CEE BOA VISTA - BOA VISTA\/RR"
            android:id="@+id/local"
            android:layout_below="@+id/dateTime"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="A entrega não pode ser efetuada - Destinatário não apresentou documento exigido"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/status"
            android:layout_below="@+id/statusThumb"
            android:layout_alignLeft="@+id/statusThumb"
            android:layout_alignStart="@+id/statusThumb"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details"
            android:text="Em trânsito para CEE MANAUS - MANAUS\/AM"
            android:layout_below="@+id/status"
            android:layout_alignLeft="@+id/status"
            android:layout_alignStart="@+id/status"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>