<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.correios.edwinos.consultacorreios" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NETWORK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.correios.edwinos.consultacorreios.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.correios.edwinos.consultacorreios.InsertActivity"
            android:label="@string/title_activity_insert"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
        >
            <intent-filter>
                <action android:name="com.correios.edwinos.consultacorreios.InsertActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.correios.edwinos.consultacorreios.RequestActivity"
            android:label="@string/title_activity_request"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.correios.edwinos.consultacorreios.RequestActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
